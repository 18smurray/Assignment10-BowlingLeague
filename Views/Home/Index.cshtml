@{
    ViewData["Title"] = "Home Page";
}

@model IndexViewModel

<div class="text-center">
    <h2>Bowling League Contact List</h2>
    @if (Model.TeamName != null)
    {
        <h3>Team: @Model.TeamName</h3>
    }
</div>
<br />

@if (Model.Bowlers.Count() > 0)
{
    <table width="100%">
        <thead class="border-bottom">
            <tr>
                <th width="30%">Name</th>
                <th width="50%">Address</th>
                <th width="20%">Phone Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model.Bowlers)
            {
                <tr>
                    <td>@b.BowlerLastName, @b.BowlerFirstName @b.BowlerMiddleInit</td>
                    <td>@b.BowlerAddress @b.BowlerCity, @b.BowlerState @b.BowlerZip</td>
                    <td>@b.BowlerPhoneNumber</td>
                </tr>
            }
        </tbody>
    </table>
    <div page-info="@Model.PageNumberingInfo" page-url-teamname="@Model.TeamName"></div>
}
else
{
    <div class="text-center">
        <p>Oops! There are no Bowlers associated with this team!</p>
    </div>
}

